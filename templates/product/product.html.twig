{% extends 'base.html.twig' %}
{% block title %}{{ product.name }}{% endblock %}
{% block body %}
    <div class="row mt-3 mb-4">
        <div class="col-md-4">
            <div class="row">
                <div class="col-12">
                    <img src="https://picsum.photos/id/21/600/600" alt="{{ product.name }}" class="img-fluid">
                </div>
            </div>
        </div>

        <div class="col-md-8 bg-light rounded border shadow">
            <h1 class="h3 mt-4 mt-md-0">{{ product.name }} <span class="float-right">$ {{ product.price }}</span></h1>

            <hr>
            
            <b>Description: </b>{{ product.description }}
            
            {{ form_start(form, {'attr': {'class': 'mt-4 p-4'}}) }}
                <div class="form-group">
                    {{ form_label(form.quantity) }}
                    {{ form_widget(form.quantity, {
                        'attr': {
                            'class': 'form-control ' ~ (form.quantity.vars.valid ? '' : 'is-invalid')
                        }
                    }) }}
                    <div class="invalid-feedback">
                        {{ form_errors(form.quantity) }}
                    </div>
                </div>

                <button class="btn btn-warning" type="submit">Add to cart</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
