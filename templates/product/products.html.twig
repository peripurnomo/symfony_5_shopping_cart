{% extends 'base.html.twig' %}
{% block title %}{{ __app_name__ ~ ' - Products' }}{% endblock %}
{% block body %}
    <div class="row">
        {% for product in products %}
            <div class="col-md-4">
                <a href="{{ path('app_product_show', {id: product.id}) }}" class="card text-decoration-none rounded shadow text-dark my-3">
                    <img src="https://picsum.photos/id/21/200/150" alt="{{ product.name }}" class="card-img-top">
                    <div class="card-body bg-light">
                        <h5 class="card-title">{{ product.name }} <span class="float-right">$ {{ product.price }}</span></h5>
                        <hr class="my-2">
                        <p class="card-text">{{ product.description }}</p>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
